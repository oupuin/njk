
{% macro video( title, desc, herosize, video_url, image_url, image_alt ) %}


<!-- Hero Section Start -->
<div class="ht-hero-section section left">

    <!-- Hero One Slider Start -->
    <div class="ht-hero-slider mflex-slider">

        <!-- Single Slide Start -->
        <div class="ht-single-slide mflex-slide {{herosize}}">

            <!-- Hero Content One Start -->
            <div class="ht-hero-content-four container slide col-sm-5">

                <h1 class="{# cssanimation leDoorCloseLeft sequence #} ">{{title}}</h1>
                <p>{{ desc }}</p>

                <a href="#section-01" class="btn btn-lg hover-solid circle blue uppercase page-scroll">
                    <span>
                        <i class="fa fa-chevron-down"></i>
                    </span>
                </a>

            </div>
            <!-- Hero Content One End -->
            <video id="introvid" src="{{video_url}}" loop autoplay></video>
            

        </div>
        <!-- Single Slide End -->


    </div>
    <!-- Hero One Slider End -->

</div>
<!-- Hero Section End -->

{% endmacro %}